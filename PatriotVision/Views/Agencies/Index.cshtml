@model IEnumerable<PatriotVision.Models.Agencies.AgenciesModel>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    @foreach (var agency in Model)
    {
        
        <div class="row justify-content-center mb-1">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        @{ 
                            if(agency.Logo != null)
                            {
                                if(agency.Logo.ThumbUrl != null)
                                {
                                    <img src="@agency.Logo.ThumbUrl"/>
                                }
                            }
                        } 
                        <h5 class="card-title"><a href="@agency.AgencyUrl">@agency.Name</a></h5>
                        <p class="card-text">@agency.Description</p>

                        <a href="@agency.RecentArticlesUrl" class="card-link">Recent Mentions</a>
                        <a href="@agency.Url" class="card-link">@agency.Url</a>
                    </div>
                </div>
            </div>
        </div>
        
    }
    
</div>